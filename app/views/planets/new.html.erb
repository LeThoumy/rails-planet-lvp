<section>
  <h1>Add your listing</h1>
  <main class="form-wrapper">
    <%= simple_form_for(@planet) do |f| %>
      <%= f.input :name %>
      <%= f.input :description, as: :text %>
      <%= f.input :price_for_one_night, as: :decimal %>
      <%= f.input :photo %>
      <%= f.submit class: "form-btn"  %>
    <% end %>
  </main>
</section>
<style>
  section {
    display: grid;
    place-content: center;
    place-items: center;
    margin-top: 60px;
  }
  .form-wrapper {
    margin: 0 auto;
    padding: 24px;
    background: var(--surface-z1);
    border-radius: 40px;
  }
  h1 {
    font-size: var(--fsz-lg);
    margin-bottom: 24px;
  }
  .form-btn {
    width: 100%;
    padding: 16px;
    background-color: #DB7F4F;
    color: #FAF2F3;
    border: none;
    border-radius: 16px;
  }
  .form-control:focus {
    border: 1px solid #DB7F4F;
    outline: 2px solid hsla(21, 66%, 58%, 0.12);
    box-shadow: none;
  }
</style>
